<%= form_for([:admin, @game_developer]) do |f| %>
  <% if @game_developer.errors.any? %>
    <div id="form_errors">
      <h2>Errors while saving:</h2>
      <ul>
      <% @game_developer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb3">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'field-light block full-width' %>
  </div>

  <div class="mb3">
    <%= f.label :location %><br>
    <%= f.text_field :location, class: 'field-light block full-width' %>
  </div>

  <div class="clearfix mb3 mxn2">
    <div class="col col-6 px2">
      <%= f.label :thumbnail %><br>
      <%= f.file_field :thumbnail %>
    </div>
  </div>

  <div class="right-align">
    <%= f.button 'Submit Game Developer', class: 'button-blue' %>
  </div>
<% end %>
