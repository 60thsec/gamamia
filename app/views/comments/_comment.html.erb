<div class="clearfix mt0 mb0 comment-block relative">
  <div class="left mr2">
    <%= avatar_for(comment.user, 'small') %>
  </div>
  <div class="overflow-hidden">
    <h4 class="mt0 mb0 username"><%= comment.user.name %><span class="posted"> Â· <%= time_ago_in_words(comment.created_at) %> ago</span></h4>
      <p class="light-gray caption regular mt0 mb1"><%= comment.user.occupation %> </p>

    <%= comment.cached_content.html_safe %>
    <% if comment.parent_id.nil? %>
    <div class="clearfix replies-header mb2">
      <button class="button js-reply">Reply</button>
    </div>
    <% end %>
    <div class="replies-block mt3">
      <div class="reply-form">
        <%= render partial: 'comments/form', locals: {comment: Comment.new, parent: comment} unless comment.parent_id? %>
      </div>
      <%= render partial: 'comments/comment', collection: comment.children unless comment.parent_id? %>
    </div>
  </div>
</div>
