<%
  size ||= 24
  avatar_path = Digest::MD5.hexdigest(user.email.downcase)
  avatar_url = "https://gravatar.com/avatar/#{avatar_path}.png?s=#{size}&d=monsterid"
%>

<a class="block" title="<%= user.name %>">
  <img class="block circle" src="<%= avatar_url %>" width="24" height="24" alt="<%= user.name %>" />
</a>
