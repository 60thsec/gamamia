<% if signed_in? && current_user.voted_for?(game) %>
  <span class="upvote-block -voted block px2 py1" href="<%= unupvote_game_path(game) %>" data-method="post">
    <span class="voteicon">▲</span>
    <%= game.cached_votes_up %>
  </span>
<% else %>
  <a class="upvote-block block px2 py1 light-gray" href="<%= upvote_game_path(game) %>" data-method="post">
   	<span class="voteicon">△</span>
    <%= game.cached_votes_up %>
  </a>
<% end %>