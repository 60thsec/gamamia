<div class="clearfix game-block">

<div class="left col vote">
  <%= div_for(game, :vote) do %>
    <%= render partial: 'upvotes/upvote', locals: { game: game } %>
  <% end %>

  <div class="mb0 mt1 speech-bubble">
    <%= icon('comment') %> <%= game.comments_count %>
  </div>
</div>

<div class="bg-white col clearfix relative game">
  <div class="col column info">

    <h4 class="mt0">
      <a class="dark-gray title" href="<%= game_path(game) %>"><%= game.title %></a>
    </h4>
    <p class="mb0 caption"><%= truncate(game.description, length: 120) %></p>

    <footer class="game-meta col-7">
        <ul class="list-reset platform-list">
            <% game.platforms.map(&:name).each do |platform| %>
              <li><%= platform %></li>
            <% end %>
          </ul>

      <div class="clearfix game-posted">
        <div class="left">
          <p class="mb0 posted">POSTED</p>
          <p>@<%= game.user.username %></p>
        </div>
        <div class="left ml1">
          <%= avatar_for(game.user, 'small') %>
        </div>

      </div>
    </footer>





  </div>

  <a class="col image block" style="background-image:url(<%= image_path(game.thumbnail.games_index) %>);" href="<%= game_path(game) %>">
  </a>

</div>

</div>
